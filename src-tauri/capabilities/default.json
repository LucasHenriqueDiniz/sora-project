{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "main-capability",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:path:default",
    "core:window:default",
    "core:window:allow-start-dragging",
    "core:event:default",
    "fs:default",
    "fs:allow-read",
    "fs:allow-write",
    "fs:allow-rename",
    "fs:allow-remove",
    "fs:allow-mkdir",
    "store:default"
  ]
}
